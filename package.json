{
  "name": "charming",
  "version": "0.1.0",
  "description": "Charming is a creative coding language for character art programming.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:wasm && vite",
    "test": "npm run build:wasm && vitest && npm run test:lint && npm run test:format",
    "test:lint": "eslint src test",
    "test:format": "prettier --check src test && cargo fmt --manifest-path ./rust/Cargo.toml --check",
    "build": "npm run build:wasm && npm run build:umd",
    "build:umd": "rm -rf dist && rm -rf esm && rollup -c",
    "build:wasm": "rm -rf ./src/wasm && wasm-pack build ./rust --out-dir ../src/wasm --out-name index --target web",
    "preview": "npm run build && vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charming-art/charming.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charming-art/charming/issues"
  },
  "homepage": "https://github.com/charming-art/charming#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-wasm": "^6.1.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.35.0",
    "pngjs": "^7.0.0",
    "prettier": "^2.8.8",
    "rollup": "^3.26.0",
    "vite": "^4.3.9",
    "vitest": "^0.32.1"
  },
  "dependencies": {
    "d3-color": "^3.1.0"
  }
}
